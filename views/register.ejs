<% include ./partials/header.ejs %>
<div
  class="w-full h-screen bg-center bg-cover bg-[url(https://images.unsplash.com/photo-1585854467604-cf2080ccef31?q=80&w=2073&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)] flex items-center justify-center"
>
  <div class="w-[30vw] h-[70vh] bg-white px-10 py-10 rounded-[30px]">
    <h1
      class="text-3xl text-center font-semibold text-zinc-700 leading-none tracking-tighter capitalize"
    >
      Create New Account
    </h1>
    <form action="/register" method="post" class="mt-3">
      <input
        class="border-2 rounded-md block w-full px-3 py-2 mt-2"
        type="text"
        name="username"
        placeholder="Username"
      />
      <input
        class="border-2 rounded-md block w-full px-3 py-2 mt-2"
        type="email"
        name="email"
        placeholder="Email"
      />
      <input
        class="border-2 rounded-md block w-full px-3 py-2 mt-2"
        type="number"
        name="contact"
        placeholder="Contact"
      />
      <input
        class="border-2 rounded-md block w-full px-3 py-2 mt-2"
        type="password"
        name="password"
        placeholder="Password"
      />
      <input
        class="border-2 rounded-[30px] block w-full px-3 py-2 mt-5 bg-red-600 text-white rounded-full"
        type="submit"
        value="Create New Account"
      />
      <p
        class="text-xs font-semibold text-zinc-700 mt-3 w-2/3 mx-auto text-center"
      >
        By continuing, you agree to Pinterest's Terms of Service and acknowledge
        you've read our Privacy Policy. Notice at collection.
      </p>
    </form>
    <a
      class="inline-block mt-5 text-sm font-semibold text-zinc-700 text-center w-full"
      href="/"
      >Login Existing Account
    </a>
  </div>
</div>
<% include ./partials/footer.ejs %>
